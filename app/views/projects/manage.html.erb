<div class="container py-3 my-5 bg_container text-center">
    <div class="row">
        <h2><strong>Manage Projects</strong></h2>
    </div>

    <div class="row">
        <% if @projects.exists? %>
            <% @projects.each do |project|%>
                <div class="col-sm-4 py-3">
                    <div class="card">
                        <div class="card-body">
                            <p>Project Id: &nbsp;<%= project.id %></p>
                            <p class="card-title"><%= truncate(project.project_name, length: 35)%></p>
                            <p class="card-text"><%= truncate(project.description, length: 35)%></p>
                            <p>Belongs to User: &nbsp;<%= project.user_id%></p>
                            <%= link_to 'View', project_path(project), class:"btn btn-outline-primary" %>
                            <% if can? :update, Project%>
                                <%= link_to 'Edit', edit_project_path(project.id), class: "btn btn-outline-primary"%>
                            <% end %>
                            <% if can? :destroy, Project %>
                                <%= link_to 'Remove', project_path(project.id), method: :delete, data: {confirm: "Are You Sure you want to delete this project?"}, class: "btn btn-outline-danger"%>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>        
        <% end %>
    </div>

</div>



