
<div class="row py-3 my-5 text-center">
    <h2><strong>All Projects</strong></h2>
</div>


<div class="row">
  <% if @projects.exists? %>
      <% @projects.each do |project|%>
          <div class="col-sm-6 py-3">
              <div class="card">
                  <div class="card-body">
                      <h5 class="card-title"><%= truncate(project.project_name, length: 45)%></h5>
                      <p class="card-text"><%= truncate(project.description, length: 45)%></p>
                      <%= link_to 'Read more', project_path(project), class:"btn btn-outline-primary" %>
                  </div>
              </div>
          </div>
      <% end %>
  <% else%>
    <div class="text-center"><h4>No Project Exists</h4></div>
  <% end %>
</div>


    <p>
        <% if can? :create, Project %>
            <%= link_to 'Create a new Project', new_project_path, class: "btn btn-outline-success" %> | 
        <% end %>
        <%= link_to 'Home', root_path, class: "btn btn-outline-success" %>
    </p>

</div>



