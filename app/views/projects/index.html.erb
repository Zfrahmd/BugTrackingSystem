<style>
.article_table_cell
{
    padding:5px 10px 5px 10px;
}
</style>

<h2><strong>All Projects</strong></h2>

<table class="article_table">
    <thead>
        <tr>
            <th class = "article_table_cell">No.</th>
            <th class = "article_table_cell">Project Name</th>
            <th class = "article_table_cell">Description</th>
            <th class = "article_table_cell">Belongs to</th>
            <th class = "article_table_cell">Bug</th>
            <th colspan = "3" class = "article_table_cell">Actions</th>
        </tr>
    </thead>

    <tbody>
    <% @projects.each do |project| %>
        <tr>
            <td class = "article_table_cell"><%= project.id %></td>
            <td class = "article_table_cell"><%= project.project_name%></td>
            <td class = "article_table_cell"><%= project.description%></td>
            <td class = "article_table_cell"><%= project.user_id%></td>
            <td class = "article_table_cell"><%= project.bug_id%></td>
            <td class = "article_table_cell"><%= link_to 'View', project_path(project.id), class: "btn btn-success" %></td>
            <td class = "article_table_cell"><%= link_to 'Edit', edit_project_path(project.id), class: "btn btn-primary"%></td>
            <td class = "article_table_cell"><%= link_to 'Remove', project_path(project.id), method: :delete, data: {confirm: "Are You Sure you want to delete this project?"}, class: "btn btn-danger"%></td>
        </tr>
    <% end %>
    </tbody>
</table>

<p>
    <%= link_to 'Create a new Project', new_project_path, class: "btn btn-success" %> | 
    <%= link_to 'Home', root_path, class: "btn btn-success" %>
</p>


